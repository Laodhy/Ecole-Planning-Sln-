<Window x:Class="EcolePlanning.UI.Modals.DeleteClasse_Modal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EcolePlanning.UI.Modals"
        mc:Ignorable="d" Width="400" Height="150" Loaded="Window_Loaded"
        Title="DeleteClasse_Modal">
    
    <StackPanel Orientation="Horizontal">
        <ComboBox x:Name="ComboBxClasses" Width="200" Margin="20,0"
                  DisplayMemberPath="Libelle"
                  HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Content="Valider" Click="Button_Click" Margin="20,0" Padding="10" VerticalAlignment="Center" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
