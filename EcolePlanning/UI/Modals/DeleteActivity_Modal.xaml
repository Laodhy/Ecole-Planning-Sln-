<Window x:Class="EcolePlanning.UI.Modals.DeleteActivity_Modal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EcolePlanning.UI.Modals"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="DeleteActivity_Modal" Width="400" Height="150">
    <StackPanel Orientation="Horizontal" x:Name="ActivitiesContainer">
        <ComboBox x:Name="ComboBxActivity" Width="200" Margin="20,0"
                  DisplayMemberPath="Libelle"
                  HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Content="Valider" Click="Button_Click" Margin="20,0" Padding="10" VerticalAlignment="Center" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
